<div id="search-menu">
<ul class="nav navbar-nav", id="searchbar">
		<%= form_tag(cases_path, method: :get, id: 'search') do %>
			<div class="input-group">
				<%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search cases by party" %>
				<span class="input-group-btn">
				<%= submit_tag "search", class: "btn btn-success" %>
				</span>
			</div>
		<% end %>	
		
		<% if admin? %>
			<%= form_tag(upload_cases_path, multipart: true, class: "col-lg-3", id: "upload") do %>		
				<div class="input-group">
		  			<%= file_field_tag :file, accept: 'text/csv', class: "form-control" %>
		  			<span class="input-group-btn">
		  			<%= submit_tag "Upload", class: "btn btn-success" %>
		  			</span>
	  			</div>
			<% end %>
				
		<li><%= link_to( "Add New Case", new_case_path) %></li>
		<% end %>
</ul>
</div>
