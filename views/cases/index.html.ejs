<% @page_title = "Cases List" %>
<div id="onlinecontent">
	<div id="tools">
		<%= render "searchbar" %>
	</div>
	<div id="user">	
		<%= render "shared/manage_user_profile" %>
	</div>
	
	<div id="onlinebox">
	<% if @cases.count < 1 %>
	<div id="nocase"> No Case Found </div>
	<% else %>
	<div id="count"><%= "#{@total} no of cases found" %></div>
	<div id="casestable">
		<table id="casesheader">
			<col>
			<col>
			<col>
			<% if admin? %><col><% end %>
			<tr>
				<td>Case No</td>
				<td>Category</td>
				<td>Party</td>
				<% if admin? %><td>Actions</td><% end %>
			</tr>
		</table>
		<div id="innertable">
			<table>	
				<col>
				<col>
				<col>
				<% if admin? %><col><% end %>
				<%= render partial: "case", collection: @cases, as: :c %>
			</table>
		</div>
	</div>		
	<img src="/assets/ajax-loader.svg" id="loader" style="display: none;">
	<footer>
	<%= paginate @cases, remote: true, class: "pagination" %>
	<div id="indemnifier">
		<p>We tried our best to keep all the data correctly, however,we do not guarantee the accurancy and completeness. 
		Please inform us if there is anything wrong, thanks!</p>
	</div>
	</footer>
	<% end %>
</div>
</div>
